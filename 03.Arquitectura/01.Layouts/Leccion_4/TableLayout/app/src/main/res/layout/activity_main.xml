<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.javiersl.tablelayout.MainActivity"
    android:stretchColumns="*">

    <TableRow android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/c11"
            android:textAppearance="?android:textAppearanceLarge"
            android:gravity="center"
            android:background="@color/color11"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/c12"
            android:textAppearance="?android:textAppearanceLarge"
            android:gravity="center"
            android:background="@color/color12"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/c13"
            android:textAppearance="?android:textAppearanceLarge"
            android:gravity="center"
            android:background="@color/color13"
            android:textColor="@android:color/white"/>
    </TableRow>

    <TableRow android:layout_weight="1">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="@string/c21"
               android:textAppearance="?android:textAppearanceLarge"
               android:gravity="center"
               android:background="@color/color21"
               android:textColor="@android:color/white"/>

