<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.javiersl.galeria.MainActivity"
    android:useDefaultMargins="true"
    android:columnCount="3">

    <ImageView
        android:src="@drawable/futbol"
        android:layout_width="@dimen/imagen_width"
        android:layout_height="@dimen/imagen_height"
        android:scaleType="centerCrop"/>

    <ImageView
        android:src="@drawable/baloncesto"
        android:layout_height="@dimen/imagen_height"
        android:layout_width="@dimen/imagen_width"
        android:scaleType="centerCrop"/>

    <ImageView
        android:src="@drawable/tenis"
        android:layout_height="@dimen/imagen_height2"
        android:layout_width="@dimen/imagen_width"
        android:scaleType="centerCrop"
        android:layout_rowSpan="3"/>

    <TextView
        android:text="@string/futbol"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:text="@string/baloncesto"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:src="@drawable/voleibol"
        android:layout_height="@dimen/imagen_height"
        android:layout_width="@dimen/imagen_width2"
        android:scaleType="centerCrop"
        android:layout_columnSpan="2"/>

    <TextView
        android:text="@string/voleibol"
        android:layout_gravity="center_horizontal"
        android:layout_columnSpan="2"/>

    <TextView
        android:text="@string/tenis"
        android:layout_gravity="center_horizontal"/>
</GridLayout>
